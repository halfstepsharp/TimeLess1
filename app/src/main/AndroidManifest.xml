<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/timelesslogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/timelesslogo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".SplashActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity android:name=".add_credit_card" />
        <activity android:name=".paymentScreen" />
        <activity android:name=".CreateUser" />
        <activity android:name=".AccountSettings" />
        <activity android:name=".Cart" />
        <activity
            android:name=".AddProductforSale"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Buy_Screen" />
        <activity
            android:name=".Slidermenu"
            android:label="@string/title_activity_slidermenu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SecondActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>